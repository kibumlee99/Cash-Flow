<Window x:Class="Cash_Flow.Winner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cash_Flow"
        mc:Ignorable="d"
        Title="Winner" Height="252.1" Width="500">
    <Grid>
        <TextBlock x:Name="messageLabel" HorizontalAlignment="Center" Margin="0,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Player 1 escaped the rat race!" FontWeight="Bold" FontSize="18"/>
        <TextBlock x:Name="cashFlowLabel" HorizontalAlignment="Left" Margin="138,84,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="totalExpensesLabel" HorizontalAlignment="Left" Margin="138,118,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="savingsLabel" HorizontalAlignment="Left" Margin="138,151,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Button x:Name="okayButton" Content="Okay" HorizontalAlignment="Center" Margin="0,189,0,0" VerticalAlignment="Top" Height="37" Width="68" Click="okayButton_Click"/>

    </Grid>
</Window>
